        <style>
            /* Add CSS for the main container */
            .container {
                display: flex;
                flex-direction: column;
                justify-content: center;
                /* Center vertically */
                align-items: center;
                /* Center horizontally */
                height: 100vh;
            }

            .projects-title {
                text-align: center;
                padding: 20px;
                background-color: #fff;

                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                /* Add shadow for a modern look */
                border-radius: 8px;
                /* Rounded corners for a modern look */

                margin: 0;
                padding: 0;
                display: flex;
                justify-content: center;
                align-items: center;
                min-height: 20vh;
                background-color: #f0f0f0;
            }

            .projects-content {
                display: flex;
                flex-wrap: wrap;
                justify-content: space-between;
                margin: 25px;
            }

            .project-card {
                user-select: none;
                width: calc(33.33% - 20px);
                /* Adjust the width as needed */
                margin: 10px;
                border: 1px solid #ccc;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                transition: transform 0.2s;
                overflow: hidden;
                /* Hide overflowing content */
                text-align: center;
            }

            .project-card:hover {
                transform: scale(1.05);
            }

            .project-card img {
                width: 300px;
                /* Set the width to 300px */
                height: 300px;
                /* Set the height to 300px */
                object-fit: cover;
                /* Maintain aspect ratio and cover the entire container */
            }

            .project-description {
                padding: 10px;
            }

            .project-description h3 {
                font-size: 18px;
                margin: 0;
            }

            .project-description p {
                font-size: 14px;
                margin: 10px 0;
            }
        </style>



